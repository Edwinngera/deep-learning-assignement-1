
def load_cifar10_data(data_dir):
    '''Return train_data, train_labels, test_data, test_labels
    The shape of data is 32 x 32 x3'''
    train_data = None
    train_labels = []

    for i in range(1, 6):
        data_dic = unpickle(data_dir + "/data_batch_{}".format(i))
        if i == 1:
            train_data = data_dic['data']
        else:
            train_data = np.vstack((train_data, data_dic['data']))
        train_labels += data_dic['labels']

    test_data_dic = unpickle(data_dir + "/test_batch")
    test_data = test_data_dic['data']
    test_labels = test_data_dic['labels']

    train_data = train_data.reshape((len(train_data), 3, 32, 32)) # first axis stays the same, second axis (3072 values) is split into 3, and the 1024 pixels are split into 32x32 pixels
    train_data = np.rollaxis(train_data, 1, 4) #put 3 at the end
    train_labels = np.array(train_labels)

    test_data = test_data.reshape((len(test_data), 3, 32, 32))
    test_data = np.rollaxis(test_data, 1, 4)
    test_labels = np.array(test_labels)

    label_names_dic = unpickle(data_dir + "/batches.meta")
    label_names = label_names_dic['label_names']

    dogscats_train = []
    dogscats_data = []
    for i in range(0, len(test_labels)):

        if (test_labels[i]== 3) or (test_labels[i]==5):
            dogscats_data.append(test_data[i])


    return train_data, train_labels, test_data, test_labels, label_names, dogscats_data

train_data, train_labels, test_data, test_labels, label_names = load_cifar10_data(data_dir)